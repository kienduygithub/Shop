<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit CRUD</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">

    <!-- jQuery library -->
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.4/dist/jquery.slim.min.js"></script>

    <!-- Popper JS -->
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>

    <!-- Latest compiled JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    <div class="container">
        <form action="/put-crud" method="POST">
            <div class="form-row">
                <div class="col-12 mt-3 mb-2">
                    <b>Edit User's infomation:</b>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-6">
                    <label>First name</label>
                    <input type="text" name="firstName" value="<%=data.firstName%>" class="form-control"/>
                </div>
                <div class="form-group col-6">
                    <label>Last name</label>
                    <input type="text" name="lastName" value="<%=data.lastName%>" class="form-control"/>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-9">
                    <label>Address</label>
                    <input type="text" name="address" value="<%=data.address%>" class="form-control"/>
                </div>
            </div>
            <input type="text" hidden name="id" value="<%=data.id%>"/>
            <div class="form-row">
                <div class="form-group col-6">
                    <button type="submit" class="btn btn-primary">Update</button>
                </div>
            </div>
        </form>
    </div>
</body>
</html>