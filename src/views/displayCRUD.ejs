<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Display CRUD</title>
    <link rel="stylesheet" href="CRUD.css">
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
</head>
<body>
    <h3 style="text-align: center;">Display all users</h3>
    <div class="container">
        <div class="w3-container">
            <table class="w3-table w3-hoverable w3-striped" style="font-size: 12px !important;">
              <thead>
                <tr style="background-color: #04AA6D; color: white;">
                  <th>Email</th>
                  <th>First Name</th>
                  <th>Last Name</th>
                  <th>Address</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody>
                <%for(let i = 0; i < data.length;i++){%>
                    <tr>
                        <td><span><%=data[i].email%></span></td>
                        <td><span><%=data[i].firstName%></span></td>
                        <td><span><%=data[i].lastName%></span></td>
                        <td><span><%=data[i].address%></span></td>
                        <td>
                            <a class="btn btn-edit" href="/edit-crud/?id=<%=data[i].id%>">
                                Edit
                            </a>
                            <a class="btn btn-delete" href="/delete-crud?id=<%=data[i].id%>">
                                Delete
                            </a>
                        </td>
                    </tr>
                <%}%>
              </tbody>
            </table>
          </div>
    </div>
</body>
</html>